<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <title>Talent FAV</title>
    
    <script src="https://kit.fontawesome.com/8321f6fdd4.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="{$baseUrl}/css/main.css" rel="stylesheet">
</head>

<body>
    <div class="flash-container">
        <div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message} <button type="button" class="btn-close" aria-label="Close"></button></div>
    </div>
    
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                 <div class="col-12 p-3">
                     <h1><img src="{$baseUrl}/img/logo.svg" alt="Logo FAV" class="topimg" /> {_main.title}</h1>
                 </div>
            </div>
        </div>
    </div>
    <div class="container-fluid yellow p-0">
        <div class="container p-0">
            <div class="row p-0">
                <div class="col-12 p-0">
                    <div class="menu">
                        <a n:href="Home:"><div class="left">{_main.menu.homepage}</div></a>
                        <a n:href="GrabTheLab:"><div class="left">{_main.menu.grabthelab}</div></a>
                        <a n:href="Scholarship:"><div class="left">{_main.menu.stipendium}</div></a>
                        
                        {if $user->isLoggedIn()}
                        <a n:href="logout!" title="{_main.menu.logout}"><div class="right"><i class="fa-solid fa-right-from-bracket"></i></div></a>

                        <a href="#"><div class="right"><i class="fa-solid fa-gear"></i></div></a>

                        <span><div class="right">{_main.menu.userloggedas} {$user->getIdentity()->email}</div></span>
                        {else}
                        <a n:href="Sign:in"><div class="right">{_main.menu.signin}</div></a>
                        <a n:href="Sign:up"><div class="right">{_main.menu.signup}</div></a>
                        {/if}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid grey">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    {include content}
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid yellow">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    &copy ZÄŒU 1991 - {date('Y')}
                </div>
            </div>
        </div>
    </div>

    {block scripts}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    
    <script src="{$baseUrl}/js/vendor/jquery.min.js"></script>
    <script src="{$baseUrl}/js/vendor/jquery.nette.js"></script>
    <script src="{$baseUrl}/js/vendor/what-input.js"></script>
    <script src="{$baseUrl}/js/vendor/netteForms.js"></script>
    <script src="{$baseUrl}/js/vendor/live-form-validation.js"></script>

    <script src="{$baseUrl}/js/main.js"></script>
    {/block}
</body>
</html>
